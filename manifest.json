{
  "name": "GitHub CommitSpy",
  "description": "Stay up-to-date on your GitHub commits.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "alarms",
    "notifications",
    "storage"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "GitHub CommitSpy",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/github-mark.png",
      "32": "icons/github-mark.png",
      "48": "icons/github-mark.png",
      "128": "icons/github-mark.png"
    }
  },
  "icons": {
    "16": "icons/github-mark.png",
    "32": "icons/github-mark.png",
    "48": "icons/github-mark.png",
    "128": "icons/github-mark.png"
  }
}